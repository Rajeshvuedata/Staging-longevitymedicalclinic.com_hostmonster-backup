    <script type="text/javascript">
    //<![CDATA[
        var newsletterSubscriberFormDetail = new VarienForm('newsletter-validate-detail');
    //]]>
    </script>
</div>
<script>
jQuery( "#newsletter-validate-detail #newsletter" ).focus(function() {jQuery( this ).parent().parent().addClass('focus');});
jQuery( "#newsletter-validate-detail #newsletter" ).focusout(function() { jQuery(this).parent().parent().removeClass('focus')})
</script>
<script type="text/javascript">
jQuery('#newsletter').on('keyup', function() {
    var input = $(this);
    if(input.val().length === 0) {
        input.addClass('empty');
    } else {
        input.removeClass('empty');
    }
});
</script>
