<?php
	
	$_productCollection=$this->getData('products');
	$product_count=Mage::getStoreConfig('tab1/general/generalproducts');
?>

<?php 	
	$count=0; 
	foreach ($_productCollection as $_product): 
	if($count<$product_count){
?>
	<div class="sub-bookpannel">	
		<div class="book-row">           
			<div class="book-column1">
            				<a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->htmlEscape($this->getImageLabel($_product, 'small_image')) ?>">
                			<img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(135); ?>" width="135" height="135" alt="<?php echo $this->htmlEscape($this->getImageLabel($_product, 'small_image')) ?>" title="<?php echo $this->htmlEscape($this->getImageLabel($_product, 'small_image')) ?>" />
            		</a>
			<div class="book-column2">
            		<p class="writer-name"><a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_product->getName()) ?>"><?php echo $this->htmlEscape($_product->getName()) ?></a></p>
			</div>
                                    
                
                <?php if($_product->isSaleable()): ?>
                    
			<div class="addcart-text"><button class="addcart-button" onclick="setLocation('<?php echo $this->getAddToCartUrl($_product) ?>')"><span><span><span><a><?php echo $this->__('Add to Cart') ?></a></span></span></span></button>
                    	</div>
                <?php else: ?>
                   	 <div class="addcart-text"><p ><span class="out-of-stock"><?php echo $this->__('Out of stock') ?></span></p>
                   	 </div>
                <?php endif; ?>
                
                    
                	<div class="sale-image"><?php $price=$_product->getPrice(); echo "$".number_format($price, 2); ?>
                   
                       </div>
			
		</div>
	</div>

    </div>     
<?php }
	else{
break;}
$count=$count+1;
 endforeach;  ?>


