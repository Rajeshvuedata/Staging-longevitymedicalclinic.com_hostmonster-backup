?>
<?php 
$_links = $this->getLinks(); 
?>
<?php if(count($_links)>0): ?>
<?php
    $loginUrl = Mage::getUrl('customer/account/login');
    $registerUrl = Mage::getUrl('customer/account/create'); 
?>
<div class="register-login">
     <?php if (Mage::getSingleton('customer/session')->isLoggedIn()==0): ?>
        <div class="login"><a href="<?php echo $loginUrl;?>"><i class="fa fa-sign-in"></i>Login</a></div>
     <?php else: ?>
            <div class="logout"><a href="<?php echo $this->getUrl('customer/account/logout') ?>"><i class="fa fa-sign-out"></i><?php echo $this->__('Log Out') ?></a></div>
       <?php endif;?>
       <div class="register"><a href="<?php echo $registerUrl;?>"><i class="fa fa-lock"></i>Register</a></div>
     
 </div>

<ul class="menu dropit">
    <li class="dropit-trigger">
            <a class = 'login_click' href="<?php echo $this->getUrl('customer/account') ?>"><?php echo $this->__('My Account') ?><i class="fa fa-caret-down"></i></a>
            <ul class="dropit-submenu" id ="menu_link">
                <?php foreach($_links as $_link): ?>
                    <?php if ($_link instanceof Mage_Core_Block_Abstract):?>
                        <?php echo $_link->toHtml() ?>
                    <?php else: ?>
                        <li<?php if($_link->getIsFirst()||$_link->getIsLast()): ?> class="<?php if($_link->getIsFirst()): ?>first<?php endif; ?><?php if($_link->getIsLast()): ?> last<?php endif; ?>"<?php endif; ?> <?php echo $_link->getLiParams() ?>><?php echo $_link->getBeforeText() ?><a href="<?php echo $_link->getUrl() ?>" title="<?php echo $_link->getTitle() ?>" <?php echo $_link->getAParams() ?>><?php echo $_link->getLabel() ?></a><?php echo $_link->getAfterText() ?></li>
                    <?php endif;?>
                <?php endforeach; ?>
            </ul>
     </li>
</ul>


<?php endif; ?>



