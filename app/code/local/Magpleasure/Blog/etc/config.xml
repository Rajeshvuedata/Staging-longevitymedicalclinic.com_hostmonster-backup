<?xml version="1.0"?>
<config>
    <modules>
        <Magpleasure_Blog>
            <version>1.2.3</version>
        </Magpleasure_Blog>
    </modules>
    <crontab>
        <jobs>
            <mpblog_cron_schedule>
                <schedule>
                    <cron_expr>0-59 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>mpblog/cron::runSchedule</model>
                </run>
            </mpblog_cron_schedule>
            <mpblog_cron_views>
                <schedule>
                    <cron_expr>0 0 * * *</cron_expr>
                </schedule>
                <run>
                    <model>mpblog/cron::runViews</model>
                </run>
            </mpblog_cron_views>
        </jobs>
    </crontab>
    <frontend>
        <routers>
            <mpblog>
                <use>standard</use>
                <args>
                    <module>Magpleasure_Blog</module>
                    <frontName>mpblog</frontName>
                </args>
            </mpblog>
        </routers>
        <layout>
            <updates>
                <mpblog>
                    <file>mpblog.xml</file>
                </mpblog>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magpleasure_Blog>
                    <files>
                        <default>Magpleasure_Blog.csv</default>
                    </files>
                </Magpleasure_Blog>
            </modules>
        </translate>
        <events>
            <controller_action_layout_generate_blocks_after>
                <observers>
                    <mpblog_controller_action_layout_generate_blocks_after>
                        <type>singleton</type>
                        <class>Magpleasure_Blog_Model_Rss</class>
                        <method>blockCreated</method>
                    </mpblog_controller_action_layout_generate_blocks_after>
                </observers>
            </controller_action_layout_generate_blocks_after>
            <customer_login>
                <observers>
                    <mpblog_customer_login>
                        <type>singleton</type>
                        <class>mpblog/observer</class>
                        <method>customerLoginAfter</method>
                    </mpblog_customer_login>
                </observers>
            </customer_login>
        </events>
    </frontend>
    <admin>
        <routers>
			<mpblog_admin>
				<use>admin</use>
				<args>
					<module>Magpleasure_Blog</module>
					<frontName>mpblog_admin</frontName>
				</args>
			</mpblog_admin>
        </routers>
    </admin>
    <adminhtml>
        <events>
            <core_block_abstract_prepare_layout_after>
                <observers>
                    <mp_smartselector_generate_blocks_after>
                        <type>singleton</type>
                        <class>mpblog/adminhtml_observer</class>
                        <method>generateBlockAfter</method>
                    </mp_smartselector_generate_blocks_after>
                </observers>
            </core_block_abstract_prepare_layout_after>
        </events>
        <menu>
            <cms>
                <children>
                    <mpblog module="mpblog">
                        <title>Blog Pro</title>
                        <sort_order>80</sort_order>
                        <children>
                            <new module="mpblog">
                                <title>Add Post</title>
                                <sort_order>10</sort_order>
                                <action>mpblog_admin/adminhtml_post/new</action>
                            </new>
                            <posts module="mpblog">
                                <title>Posts</title>
                                <sort_order>20</sort_order>
                                <action>mpblog_admin/adminhtml_post/index</action>
                            </posts>
                            <comments module="mpblog">
                                <title>Comments</title>
                                <sort_order>30</sort_order>
                                <action>mpblog_admin/adminhtml_comment/index</action>
                            </comments>
                            <categories module="mpblog">
                                <title>Categories</title>
                                <sort_order>40</sort_order>
                                <action>mpblog_admin/adminhtml_category/index</action>
                            </categories>
                            <tags module="mpblog">
                                <title>Tags</title>
                                <sort_order>50</sort_order>
                                <action>mpblog_admin/adminhtml_tag/index</action>
                            </tags>
                            <notifications module="mpblog">
                                <title>Notifications</title>
                                <sort_order>55</sort_order>
                                <children>
                                    <comments module="mpblog">
                                        <title>Comment Subscription</title>
                                        <sort_order>10</sort_order>
                                        <action>mpblog_admin/adminhtml_notifications_comments/index</action>
                                    </comments>
                                </children>
                            </notifications>
                            <config module="mpblog">
                                <title>Configuration</title>
                                <sort_order>60</sort_order>
                                <action>adminhtml/system_config/edit/section/mpblog/</action>
                            </config>
                        </children>
                    </mpblog>
                </children>
            </cms>
            <system>
                <children>
                    <mpblog module="mpblog">
                        <title>Blog Pro Tools</title>
                        <sort_order>50</sort_order>
                        <children>
                            <import module="mpblog">
                                <title>Import</title>
                                <sort_order>10</sort_order>
                                <children>
                                    <wordpress module="mpblog">
                                        <title>Wordpress</title>
                                        <sort_order>20</sort_order>
                                        <action>mpblog_admin/adminhtml_import/wordpress</action>
                                    </wordpress>
                                    <awblog module="mpblog">
                                        <title>aheadWorks Blog</title>
                                        <sort_order>30</sort_order>
                                        <action>mpblog_admin/adminhtml_import/awblog</action>
                                    </awblog>
                                </children>
                            </import>
                        </children>
                    </mpblog>
                </children>
            </system>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <mpblog>
                                            <title>Magpleasure - Blog Pro</title>
                                        </mpblog>
                                    </children>
                                </config>
                            </children>
                        </system>
                        <cms>
                            <children>
                                <mpblog>
                                    <title>Blog Pro</title>
                                    <sort_order>80</sort_order>
                                    <children>
                                        <posts module="mpblog">
                                            <title>Posts</title>
                                            <sort_order>20</sort_order>
                                        </posts>
                                        <comments module="mpblog">
                                            <title>Comments</title>
                                            <sort_order>30</sort_order>
                                        </comments>
                                        <categories module="mpblog">
                                            <title>Categories</title>
                                            <sort_order>40</sort_order>
                                        </categories>
                                        <notifications module="mpblog">
                                            <title>Notifications</title>
                                            <sort_order>55</sort_order>
                                            <children>
                                                <comments module="mpblog">
                                                    <title>Comment Subscription</title>
                                                    <sort_order>10</sort_order>
                                                </comments>
                                            </children>
                                        </notifications>
                                        <tags module="mpblog">
                                            <title>Tags</title>
                                            <sort_order>50</sort_order>
                                        </tags>
                                    </children>
                                </mpblog>
                            </children>
                        </cms>
                        <system>
                            <children>
                                <mpblog module="mpblog">
                                    <title>Blog Pro Tools</title>
                                    <sort_order>50</sort_order>
                                    <children>
                                        <import module="mpblog">
                                            <title>Import</title>
                                            <sort_order>10</sort_order>
                                            <children>
                                                <wordpress module="mpblog">
                                                    <title>Wordpress</title>
                                                    <sort_order>20</sort_order>
                                                </wordpress>
                                                <awblog module="mpblog">
                                                    <title>aheadWorks Blog</title>
                                                    <sort_order>30</sort_order>
                                                </awblog>
                                            </children>
                                        </import>
                                    </children>
                                </mpblog>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <mpblog>
                    <file>mpblog.xml</file>
                </mpblog>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magpleasure_Blog>
                    <files>
                        <default>Magpleasure_Blog.csv</default>
                    </files>
                </Magpleasure_Blog>
            </modules>
        </translate>
    </adminhtml>   
    <global>
        <models>
            <mpblog>
                <class>Magpleasure_Blog_Model</class>
                <resourceModel>mpblog_mysql4</resourceModel>
            </mpblog>
            <mpblog_mysql4>
                <class>Magpleasure_Blog_Model_Mysql4</class>
                <entities>
                    <post>
                        <table>mp_blog_posts</table>
                    </post>
                    <category>
                        <table>mp_blog_categories</table>
                    </category>
                    <tag>
                        <table>mp_blog_tags</table>
                    </tag>
                    <comment>
                        <table>mp_blog_comments</table>
                    </comment>
                    <comment_subscription>
                        <table>mp_blog_comments_subscriptions</table>
                    </comment_subscription>
                    <comment_notification>
                        <table>mp_blog_comments_notifications</table>
                    </comment_notification>
                    <view>
                        <table>mp_blog_views</table>
                    </view>
                    <author>
                        <table>mp_blog_authors</table>
                    </author>
                    <archive />
                </entities>
            </mpblog_mysql4>
            <sitemap>
                <rewrite>
                    <sitemap>Magpleasure_Blog_Model_Sitemap</sitemap>
                </rewrite>
            </sitemap>
            <xsitemap>
                <rewrite>
                    <sitemap>Magpleasure_Blog_Model_Compatibility_Mageworx_Xsitemap</sitemap>
                </rewrite>
            </xsitemap>
        </models>
        <resources>
            <mpblog_setup>
                <setup>
                    <module>Magpleasure_Blog</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </mpblog_setup>
            <mpblog_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </mpblog_write>
            <mpblog_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </mpblog_read>
        </resources>
        <events>
            <controller_front_init_routers>
                <observers>
                    <mpblog_init_routers>
                        <type>singleton</type>
                        <class>Magpleasure_Blog_Controller_Router</class>
                        <method>initControllerRouters</method>
                    </mpblog_init_routers>
                </observers>
            </controller_front_init_routers>
        </events>
        <blocks>
            <mpblog>
                <class>Magpleasure_Blog_Block</class>
            </mpblog>
        </blocks>
        <helpers>
            <mpblog>
                <class>Magpleasure_Blog_Helper</class>
            </mpblog>
        </helpers>
        <template>
            <email>
                <mpblog_notify_admin_new_comment_email_template translate="label" module="mpblog">
                    <label>Blog Pro - New Comment Notification</label>
                    <file>mpblog/admin_new_comment.html</file>
                    <type>html</type>
                </mpblog_notify_admin_new_comment_email_template>
                <mpblog_notify_customer_comment_replyed_email_template translate="label" module="mpblog">
                    <label>Blog Pro - Reply to Comment Notification</label>
                    <file>mpblog/customer_reply_to_comment.html</file>
                    <type>html</type>
                </mpblog_notify_customer_comment_replyed_email_template>
                <mpblog_notify_admin_scheduled_post_email_template translate="label" module="mpblog">
                    <label>Blog Pro - Scheduled Post Notification</label>
                    <file>mpblog/admin_scheduled_post.html</file>
                    <type>html</type>
                </mpblog_notify_admin_scheduled_post_email_template>
            </email>
        </template>
    </global>
    <mpblog>
        <tools>
            <import>
                <awblog>
                    <label>aheadWorks Blog</label>
                    <note>Please make sure that aheadWorks Blog is Enabled in your system.</note>
                    <use_store_visibility>0</use_store_visibility>
                    <form />
                </awblog>
                <wordpress>
                    <label>Wordpress</label>
                    <note>Import of wordpress posts via Wordpress API. Please be patient, the process of import can take some time.</note>
                    <use_store_visibility>1</use_store_visibility>
                    <form>
                        <host>
                            <label>Wordpress Host</label>
                            <class>required-entry validate-url</class>
                            <required>1</required>
                            <name>host</name>
                            <type>text</type>
                        </host>
                        <username>
                            <label>Admin Username</label>
                            <class>required-entry</class>
                            <required>1</required>
                            <name>username</name>
                            <type>text</type>
                        </username>
                        <password>
                            <label>Admin Password</label>
                            <class>required-entry</class>
                            <required>1</required>
                            <name>password</name>
                            <type>text</type>
                        </password>
                    </form>
                </wordpress>
            </import>
        </tools>
        <tag>
            <color_schemes>
                <default>
                    <label>Default Colors</label>
                    <data>
                        <textcolor>2F2F2F</textcolor>
                        <textcolor2>9C5909</textcolor2>
                        <hicolor>2F2F2F</hicolor>
                    </data>
                </default>
                <grey>
                    <label>Grey</label>
                    <data>
                        <textcolor>111111</textcolor>
                        <textcolor2>9B9B9B</textcolor2>
                        <hicolor>111111</hicolor>
                    </data>
                </grey>
                <red>
                    <label>Red</label>
                    <data>
                        <textcolor>111111</textcolor>
                        <textcolor2>9A3232</textcolor2>
                        <hicolor>111111</hicolor>
                    </data>
                </red>
                <green>
                    <label>Green</label>
                    <data>
                        <textcolor>111111</textcolor>
                        <textcolor2>329A47</textcolor2>
                        <hicolor>111111</hicolor>
                    </data>
                </green>
                <blue>
                    <label>Blue</label>
                    <data>
                        <textcolor>111111</textcolor>
                        <textcolor2>336699</textcolor2>
                        <hicolor>111111</hicolor>
                    </data>
                </blue>
                <white>
                    <label>White</label>
                    <data>
                        <textcolor>FAFAFA</textcolor>
                        <textcolor2>FFFFFF</textcolor2>
                        <hicolor>FAFAFA</hicolor>
                    </data>
                </white>
            </color_schemes>
        </tag>
    </mpblog>
    <default>
        <mpblog>
            <menu>
                <enabled>1</enabled>
                <label>Blog</label>
                <position>5</position>
            </menu>
            <style>
                <icon_style>modern</icon_style>
                <color_sheme>mpblog-classic</color_sheme>
            </style>
            <seo>
                <route>blog</route>
                <title>Blog</title>
            </seo>
            <general>
                <layout>two_columns_right</layout>
                <use_categories>right</use_categories>
                <use_tags>right</use_tags>
                <display_recent>right</display_recent>
                <display_recent_comments>right</display_recent_comments>
                <display_archives>right</display_archives>
                <display_search>right</display_search>
                <display_short>1</display_short>
                <display_date>0</display_date>
            </general>
            <recent_posts>
                <record_limit>5</record_limit>
                <display_short>1</display_short>
                <display_date>1</display_date>
                <short_limit>100</short_limit>
            </recent_posts>
            <redirect>
                <url_postfix>.html</url_postfix>
                <redirect_to_seo_formatted_url>1</redirect_to_seo_formatted_url>
                <redirect_if_notfound>0</redirect_if_notfound>
            </redirect>
            <list>
                <count_per_page>10</count_per_page>
                <display_print>1</display_print>
            </list>
            <tags>
                <minimal_post_count>2</minimal_post_count>
                <mt_width>193</mt_width>
                <mt_height>200</mt_height>
                <mt_background>F8F7F5</mt_background>
                <mt_textcolor>2F2F2F</mt_textcolor>
                <mt_textcolor2>9C5909</mt_textcolor2>
                <mt_hicolor>2F2F2F</mt_hicolor>
            </tags>
            <comments>
                <use_comments>1</use_comments>
                <allow_guests>1</allow_guests>
                <record_limit>5</record_limit>
                <display_short>1</display_short>
                <display_date>1</display_date>
            </comments>
            <rss>
                <display_on_list>1</display_on_list>
                <post_feed>1</post_feed>
                <category_feed>1</category_feed>
                <comment_feed>1</comment_feed>
            </rss>
            <social>
                <enabled>1</enabled>
                <networks>twitter,facebook,vkontakte,blogger,pinterest,tumblr,digg,mixx,delicious,stumbleupon,slashdot,reddit,linkedin,google,googleplus</networks>
            </social>
            <sitemap>
                <enabled>1</enabled>
                <include>blog,post,tag,category,archive</include>
            </sitemap>
            <notify_customer_comment_replyed>
                <enabled>1</enabled>
            </notify_customer_comment_replyed>
        </mpblog>
    </default>
</config>