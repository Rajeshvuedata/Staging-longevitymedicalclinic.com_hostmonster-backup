<div class="block block-subscribe">
    <div class="subscribe-title">
        <h3><?php echo $this->__('Newsletter') ?></h3>
    </div>
    <form action="<?php echo $this->getFormActionUrl() ?>" method="post" id="newsletter-validate-detail">
        <div class="block-content">
            <div class="form-subscribe-header">
                <label for="newsletter"><?php echo $this->__('Keep well informed with the best and latest information creating the optimal you.') ?></label>
            </div>
            <div class="input-box">
               <input type="text" placeholder="Email" name="email" id="newsletter" title="<?php echo $this->__('Sign up for our newsletter') ?>" class="input-text empty required-entry validate-email" />
            </div>
            <div class="actions">
                <button type="submit" title="<?php echo $this->__('Subscribe') ?>" class="button"><span><span><?php echo $this->__('Subscribe') ?></span></span></button>
